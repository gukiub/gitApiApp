<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.gitapi.view.MainFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.gitapi.view.RepositoriesFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_repositories">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_repoInfoActivity"
            app:destination="@id/repoInfoActivity" />
    </fragment>
    <activity
        android:id="@+id/repoInfoActivity"
        android:name="com.example.gitapi.view.RepoInfoActivity"
        android:label="activity_repo_info"
        tools:layout="@layout/activity_repo_info" />
</navigation>