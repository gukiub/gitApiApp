<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.gitapi.view.fragments.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_repositoriesFragment2"
            app:destination="@id/repositoriesFragment2"
            app:popUpTo="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/repositoriesFragment2"
        android:name="com.example.gitapi.view.fragments.RepositoriesFragment"
        android:label="RepositoriesFragment" >
        <action
            android:id="@+id/action_repositoriesFragment2_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>